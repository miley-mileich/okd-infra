DEFAULT pxeboot
TIMEOUT 20
PROMPT 0
LABEL pxeboot
    KERNEL http://{{ load_balancer[0].hostname }}/kernel
    APPEND initrd=http://{{ load_balancer[0].hostname }}/initramfs coreos.live.rootfs_url=http://{{ load_balancer[0].hostname }}/rootfs coreos.inst.install_dev=/dev/sda coreos.inst.ignition_url=http://{{ load_balancer[0].hostname }}/bootstrap.ign